{
  "name": "e-commerce-api",
  "version": "1.0.0",
  "description": "Typescript Node.js E-commerce API",
  "scripts": {
    "build": "npm run lint && npx tsc",
    "start:dev": "npx nodemon -L",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "npx prettier --check 'src/**/*.ts' 'src/**/*.ts' ",
    "style:fix": "npx prettier --write 'src/**/*.ts' 'test/**/*.ts' ",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "docker",
    "api",
    "ecommerce"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.5",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "eslint": "8.57.0",
    "jest": "29.7.0",
    "ntl": "5.1.0",
    "typescript": "5.4.4"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0"
  },
  "engines": {
    "node": "v18.19.1"
  }
